<Window x:Name="window" x:Class="BinaryPuzzleSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryPuzzleSolver"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="puzzleSizeText" HorizontalAlignment="Left" Margin="166,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="136" Width="219"/>
        <ComboBox x:Name="puzzleSizeSelector" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="puzzleSizeSelector_SelectionChanged" ToolTip="Puzzle Size" IsReadOnly="True" Text="Select Puzzle Size">
            <ComboBoxItem Content="2x2"/>
            <ComboBoxItem Content="3x3"/>
            <ComboBoxItem Content="4x4"/>
        </ComboBox>
    </Grid>
</Window>
